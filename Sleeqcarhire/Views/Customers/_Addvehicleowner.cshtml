@model DBL.Entities.Companycustomers
<div class="modal-header">
    <h5 class="text-sm modal-title" id="allpoliciesModalLabel">Add Customer Owner</h5>
    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="Addvehicleowner" asp-controller="Customers" method="post">
    <div class="modal-body">
        <div class="row m-2">
            <div class="col-sm-6">
                <label asp-for="Firstname"  class="font-weight-light"></label>
                <input asp-for="Firstname" class="form-control form-control-sm text-capitalize" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="Lastname" class="font-weight-light"></label>
                <input asp-for="Lastname" class="form-control form-control-sm text-capitalize" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-sm-6">
                <label asp-for="Emailadd" class="font-weight-light"></label>
                <input asp-for="Emailadd" class="form-control form-control-sm" />
                <span asp-validation-for="Emailadd" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="Phoneno" class="font-weight-light"></label>
                <input asp-for="Phoneno" class="form-control form-control-sm" />
                <span asp-validation-for="Phoneno" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-sm-6">
                <label asp-for="Idnumber" class="font-weight-light"></label>
                <input asp-for="Idnumber" class="form-control form-control-sm" />
                <span asp-validation-for="Idnumber" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="Custtype" class="font-weight-light"></label>
                <select asp-for="Custtype" class="form-control form-control-sm">
                    <option value="0">---Select Owner Type---</option>
                    <option value="100">Corporate</option>
                    <option value="200">Individual</option>
                </select>
                <span asp-validation-for="Custtype" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-sm-12">
                <label asp-for="Descriptions" class="font-weight-light"></label>
                <textarea asp-for="Descriptions" class="form-control form-control-sm"></textarea>
                <span asp-validation-for="Descriptions" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-sm btn-info" value="Save">
    </div>
</form>