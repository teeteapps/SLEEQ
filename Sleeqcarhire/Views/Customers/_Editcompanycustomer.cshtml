@model DBL.Entities.Companycustomers
<div class="modal-header">
    <h5 class="text-sm modal-title" id="allpoliciesModalLabel">Edit Customer Details</h5>
    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="Editcompanycustomer" asp-controller="Customers" method="post">
    <div class="modal-body">
        <div>
            <input asp-for="Custcode" hidden />
        </div>
        <div class="row m-2">
            <div class="col-sm-6">
                <label asp-for="Firstname" class="font-weight-light"></label>
                <input asp-for="Firstname" class="form-control form-control-sm text-capitalize" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="Lastname" class="font-weight-light"></label>
                <input asp-for="Lastname" class="form-control form-control-sm text-capitalize" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-sm-6">
                <label asp-for="Phoneno" class="font-weight-light"></label>
                <input asp-for="Phoneno" class="form-control form-control-sm" />
                <span asp-validation-for="Phoneno" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="Idnumber" class="font-weight-light"></label>
                <input asp-for="Idnumber" class="form-control form-control-sm" />
                <span asp-validation-for="Idnumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-sm-12">
                <label asp-for="Emailadd" class="font-weight-light"></label>
                <input asp-for="Emailadd" class="form-control form-control-sm" />
                <span asp-validation-for="Emailadd" class="text-danger"></span>
            </div>

            <div class="col-sm-6" hidden>
                <label asp-for="Custtype" class="font-weight-light"></label>
                <input asp-for="Custtype" value="300" />
            </div>
        </div>
        <div class="row m-2">
            <div class="col-sm-6">
                <label asp-for="Occupation" class="font-weight-light"></label>
                <textarea asp-for="Occupation" class="form-control form-control-sm"></textarea>
                <span asp-validation-for="Occupation" class="text-danger"></span>
            </div>
            <div class="col-sm-6">
                <label asp-for="Residence" class="font-weight-light"></label>
                <textarea asp-for="Residence" class="form-control form-control-sm"></textarea>
                <span asp-validation-for="Residence" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-sm btn-info" value="Update">
    </div>
</form>