@model IEnumerable<DBL.Models.Viewvehicleowners>
@{
    ViewData["Title"] = "Vehicleownerslist";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <a href="@Url.Action("Addvehicleowner","Customers")" class="btn btn-info btn-sm float-right" data-bs-target="#AddvehicleownerModal" data-bs-toggle="modal">Add Vehicle Owner</a>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped" id="vehicleownersdata">
                    <thead>
                        <tr>
                            <th>Fullname</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Owner Type</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.Ownerfirstname+' '+item.Ownerlastname)</td>
                                <td>@item.Owneremail</td>
                                <td>@item.Ownerphone</td>
                                <td>@if (item.Ownertype == 100) {<p>Corporate</p>} else { <p>Individual</p>}</td>
                                <td><a class="btn btn-info btn-sm" href="@Url.Action("Vehicleownerdetails","Customers",new{ownercode=item.Vehicleownercode})">Details</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade mt-5" id="AddvehicleownerModal" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $('#AddvehicleownerModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var url = button.attr("href");
            var modal = $(this);
            modal.find('.modal-content').load(url);
        });
        $('#AddvehicleownerModal').on('hidden.bs.modal', function () {
            $(this).removeData('bs.modal');
            $('#AddvehicleownerModal .modal-content').empty();
        });
        $(document).ready(function () {
            $('#vehicleownersdata').DataTable();
        });
    </script>
}