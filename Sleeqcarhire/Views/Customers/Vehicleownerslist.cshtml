@model IEnumerable<DBL.Models.Viewcompanycustomers>
@{
    ViewData["Title"] = "Vehicleownerslist";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <a href="@Url.Action("Addvehicleowner","Customers")" class="btn btn-info btn-xs float-right" data-bs-target="#AddvehicleownerModal" data-bs-toggle="modal">Add Vehicle Owner</a>
            </div>
            <div class="card-body table-responsive-sm">
                <table class="table table-bordered table-striped compact nowrap text-nowrap flex-nowrap table-sm font-weight-light" id="vehicleownersdata">
                    <thead>
                        <tr>
                            <th class="font-weight-light">Fullname</th>
                            <th class="font-weight-light">Email</th>
                            <th class="font-weight-light">Phone</th>
                            <th class="font-weight-light">Owner Type</th>
                            <th class="font-weight-light">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-capitalize">@(item.Firstname+' '+item.Lastname)</td>
                                <td>@item.Emailadd</td>
                                <td>@item.Phoneno</td>
                                <td>@item.Custtypename</td>
                                <td><a class="btn btn-info btn-xs ml-1" href="@Url.Action("Vehicleownerdetails","Customers",new{Custcode=item.Custcode})">Details</a><a class="btn btn-info btn-xs ml-1" href="@Url.Action("Editvehicleowner","Customers",new{Custcode=item.Custcode})" data-bs-target="#AddvehicleownerModal" data-bs-toggle="modal">Edit</a><a class="btn btn-danger btn-xs ml-1" href="@Url.Action("Deletevehicleowner","Customers",new{Custcode=item.Custcode})">Delete</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade mt-5" id="AddvehicleownerModal" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/formvalidation.js"></script>
    <script src="~/lib/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript">
        $('#AddvehicleownerModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var url = button.attr("href");
            var modal = $(this);
            modal.find('.modal-content').load(url);
        });
        $('#AddvehicleownerModal').on('hidden.bs.modal', function () {
            $(this).removeData('bs.modal');
            $('#AddvehicleownerModal .modal-content').empty();
        });
        $(document).ready(function () {
            $('#vehicleownersdata').DataTable();
        });
    </script>
}