@model IEnumerable<DBL.Models.Viewcompanyvehicles>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <img src="@Url.Content(item.Imagepath)" class="card-img-top" />
                        <div class="card-body bg-info">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="text-xs text-white">
                                        <tbody>
                                            <tr><td class="text-uppercase"><b>@item.Typename @item.Capacity</b></td></tr>
                                            <tr class="text-center text-decoration-underline">
                                                <td><b>Days and Prices</b></td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <b>Mon - Thurs: </b>Ksh.@item.Mondayprice.ToString("#,##0.00")<br />
                                                    <b>Fri - Sun: </b> Ksh.@item.Fridayprice.ToString("#,##0.00")<br />
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>