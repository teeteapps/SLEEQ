@model IEnumerable<DBL.Models.Viewstaffs>
@{
    ViewData["Title"] = "Stafflists";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <a href="@Url.Action("Addstaff","Account")" class="btn btn-info btn-xs float-right" data-bs-target="#AddstaffModal" data-bs-toggle="modal">Add Staff</a>
            </div>
            <div class="card-body table-responsive-sm">
                <table class="dataTable table table-bordered table-striped display compact nowrap" id="staffsdata">
                    <thead>
                        <tr>
                            <th>Fullname</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Type</th>
                            <th>Date Created</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Fullname</td>
                                <td>@item.Emailadd</td>
                                <td>@item.Phonenumber</td>
                                <td>@item.Staffrole</td>
                                <td>@item.Datecreated</td>
                                <td><a class="btn btn-info btn-xs ml-1" href="@Url.Action("Editstaff","Customers",new{Usercode=item.Usercode})">Edit</a><a class="btn btn-danger btn-xs ml-1" href="@Url.Action("Deletestaff","Customers",new{Usercode=item.Usercode})">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade mt-5" id="AddstaffModal" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $('#AddstaffModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var url = button.attr("href");
            var modal = $(this);
            modal.find('.modal-content').load(url);
        });
        $('#AddstaffModal').on('hidden.bs.modal', function () {
            $(this).removeData('bs.modal');
            $('#AddstaffModal .modal-content').empty();
        });
        $(document).ready(function () {
            $('#staffsdata').DataTable();
        });
    </script>
}