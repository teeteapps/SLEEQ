@using System.Security.Claims
@using DBL.Helpers
@{
    bool authenticated = false;
    string userId = "";
    UserDataModel currentUserData = null;
    long userType = -1;
    if (User.Identities.Any(u => u.IsAuthenticated))
    {
        authenticated = true;
        currentUserData = Util.GetCurrentUserData(User.Identities);
        if (currentUserData != null)
        {
            userType = currentUserData.UserCode;

        }
        userId = User.Identities.First(u => u.IsAuthenticated && u.HasClaim(c => c.Type == ClaimTypes.NameIdentifier))
            .FindFirst(ClaimTypes.NameIdentifier).Value;
    }
    EncryptDecrypt sec = new EncryptDecrypt();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sleeqcarhire</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/lib/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/adminlte.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/lib/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed control-sidebar-slide-open text-sm">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark fixed-top">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fa fa-bars"></i></a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fa fa-user-circle">&nbsp;</i><span>@currentUserData.Fullname</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-right border-0 elevation-0 bg-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                        <li><a href="@Url.Action("Changepassword","Account",new { UserCode=currentUserData.UserCode})" class="dropdown-item text-white" data-bs-target="#ChangepasswordModal" data-bs-toggle="modal">Change Password</a></li>
                        <li><a class="fa fa-lock dropdown-item text-white" href="@Url.Action("Logout","Account")">&nbsp;&nbsp;Log out</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        @if (authenticated && currentUserData != null)
        {
            @await Component.InvokeAsync("Menu", currentUserData.ProfileCode)
        }
        <div class="content-wrapper" style="margin-top:70px">
            <section class="content">
                <div class="container-fluid">
                    <div class="row mt-1">
                        <div class="col-sm-12" id="AlertsContainer">
                            @{ await Html.RenderPartialAsync("_Alerts"); }
                        </div>
                    </div>
                    @RenderBody()
                </div>
            </section>
        </div>
        <footer class="main-footer text-center">
            &copy; @DateTime.Now.AddYears(-1).Year - @DateTime.Now.Year - Sleeqcarinternational
        </footer>
    </div>

    <div class="modal fade mt-5" id="ChangepasswordModal" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/adminlte.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $('#ChangepasswordModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var url = button.attr("href");
            var modal = $(this);
            modal.find('.modal-content').load(url);
        });
        $('#ChangepasswordModal').on('hidden.bs.modal', function () {
            $(this).removeData('bs.modal');
            $('#ChangepasswordModal .modal-content').empty();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
