@model DBL.Entities.Vehiclehiredays
<div class="modal-header">
    <h5 class="text-sm modal-title" id="allpoliciesModalLabel">Vehicle Hire Days</h5>
    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="Addvehiclehiredays" asp-controller="Maintenance" method="post">
    <div class="modal-body">
        <div class="row m-2">
            <div class="col-sm-12">
                <label asp-for="Hirefrom"></label>
                <input asp-for="Hirefrom" class="form-control" />
                <span asp-validation-for="Hirefrom" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-sm-12">
                <label asp-for="Hireto"></label>
                <input asp-for="Hireto" class="form-control" />
                <span asp-validation-for="Hireto" class="text-danger"></span>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-sm-12">
                <label asp-for="Hireprice"></label>
                <input asp-for="Hireprice" class="form-control" />
                <span asp-validation-for="Hireprice" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-sm btn-info" value="Save">
    </div>
</form>