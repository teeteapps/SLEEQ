@model IEnumerable<DBL.Models.Viewhiredvehicles>
@{
    ViewData["Title"] = "Companyhiredvehicles";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body table-responsive-sm">
                <table class="table table-bordered table-striped compact nowrap text-nowrap flex-nowrap table-sm font-weight-light" id="companyvehicledata">
                    <thead>
                        <tr>
                            <th class="font-weight-light">Vehicle Details</th>
                            <th class="font-weight-light">Customer Details</th>
                            <th class="font-weight-light">Trip Details</th>
                            <th class="font-weight-light">Payment Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Regno <br />
                                    @item.Typename <br />
                                    @item.Capname <br />
                                    @item.Enginesize <br />
                                </td>
                                <td>
                                   @item.Fullname<br />
                                   @item.Emailaddress<br />
                                   @item.Phoneno<br />
                                </td> 
                                <td>
                                   @item.Whereto<br />
                                   @item.Wheretodescription<br />
                                   @item.Startdate<br />
                                   @item.Enddate<br />
                                </td>
                                <td>
                                   <b>Ksh.</b>@item.Hireamount<br />
                                   <b>Ksh.</b>@item.Carwash<br />
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/lib/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/lib/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#companyvehicledata').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
}