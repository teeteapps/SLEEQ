@model DBL.Entities.Vehiclehiredays
@{
    ViewData["Title"] = "Addvehiclehiredays";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h5>Vehicle Hire Days</h5>
            </div>
            <form asp-action="Addvehiclehiredays" asp-controller="Maintenance" method="post">
                <div class="card-body">
                    <input asp-for="Sleeqcarcode" hidden />
                    <div class="row">
                        <div class="col-sm-3">
                            <label asp-for="Hirefrom"></label>
                            <input asp-for="Hirefrom" class="form-control" />
                            <span asp-validation-for="Hirefrom" class="text-danger"></span>
                        </div>
                        <div class="col-sm-3">
                            <label asp-for="Hireto"></label>
                            <input asp-for="Hireto" class="form-control" />
                            <span asp-validation-for="Hireto" class="text-danger"></span>
                        </div>
                        <div class="col-sm-3">
                            <label asp-for="Hireprice"></label>
                            <input asp-for="Hireprice" class="form-control" />
                            <span asp-validation-for="Hireprice" class="text-danger"></span>
                        </div>
                        <div class="col-sm-3 mt-4">
                            <input type="submit" class="btn btn-info" value="Submit" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>